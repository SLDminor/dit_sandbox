{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "todo-lib": [
        "./dist/todo-lib",
        "./dist/todo-lib"
      ]
    },
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "files": [ "src/main.ts"],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "todo-lib/src/lib/todo-lib.spec.ts"
  ],
  "references": [
    {
      "path": "./todo-lib/tsconfig.lib.json"
    },
    {
      "path": "./todo-lib/tsconfig.spec.json"
    },
    {
      "path": "./todo-lib/tsconfig.lib.json"
    },
    {
      "path": "./todo-lib/tsconfig.spec.json"
    }
  ]
}